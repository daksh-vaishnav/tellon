generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int               @id @default(autoincrement())
  role             UserRole          @default(USER)
  username         String            @unique
  email            String            @unique
  password         String
  profilePic       String?
  balance          Float
  orders           Orderbook[]
  holdings         UserHolding[]
  liquidityActions LiquidityAction[]
}

model Market {
  id               Int               @id @default(autoincrement())
  title            String
  thumbnail        String?
  outcomes         Outcome[]
  orderbooks       Orderbook[]
  trades           Trade[]
  liquidityActions LiquidityAction[]
  category         marketCategory[]
  userHoldings     UserHolding[]
}

model marketCategory {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  markets Market[]
}

model Outcome {
  id                Int                @id @default(autoincrement())
  market            Market             @relation(fields: [marketId], references: [id])
  marketId          Int
  label             String // YES/NO or any other outcome
  initPrice         Float
  trades            Trade[]
  orderbooks        Orderbook[]
  liqActionOutcomes LiqActionOutcome[]
}

model Orderbook {
  id           Int           @id @default(autoincrement())
  market       Market        @relation(fields: [marketId], references: [id])
  marketId     Int
  outcome      Outcome       @relation(fields: [outcomeId], references: [id])
  outcomeId    Int
  user         User          @relation(fields: [userId], references: [id])
  userId       Int
  type         OrderType
  price        Float
  quantity     Int
  executedQty  Int
  status       OrderStatus
  createdAt    DateTime      @default(now())
  updatedAt    DateTime?
  buyTrades    Trade[]       @relation("BuyOrder")
  sellTrades   Trade[]       @relation("SellOrder")
  userHoldings UserHolding[]
}

model Trade {
  id              Int       @id @default(autoincrement())
  market          Market    @relation(fields: [marketId], references: [id])
  marketId        Int
  outcome         Outcome   @relation(fields: [outcomeId], references: [id])
  outcomeId       Int
  buyOrderbook    Orderbook @relation("BuyOrder", fields: [buyOrderbookId], references: [id])
  buyOrderbookId  Int
  sellOrderbook   Orderbook @relation("SellOrder", fields: [sellOrderbookId], references: [id])
  sellOrderbookId Int
  price           Float
  qty             Int
  timestamp       DateTime  @default(now())
}

model UserHolding {
  id          Int       @id @default(autoincrement())
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  market      Market    @relation(fields: [marketId], references: [id])
  marketId    Int
  orderbook   Orderbook @relation(fields: [orderbookId], references: [id])
  orderbookId Int
  qty         Int
  price       Float
}

model LiquidityAction {
  id                Int                 @id @default(autoincrement())
  market            Market              @relation(fields: [marketId], references: [id])
  marketId          Int
  user              User                @relation(fields: [userId], references: [id])
  userId            Int
  action            LiquidityActionType // SPLIT or MERGE
  amountInvested    Float
  amountReceived    Float?
  liqActionOutcomes LiqActionOutcome[]
  timestamp         DateTime            @default(now())
}

model LiqActionOutcome {
  id              Int             @id @default(autoincrement())
  liquidityAction LiquidityAction @relation(fields: [laId], references: [id])
  laId            Int
  outcome         Outcome         @relation(fields: [outcomeId], references: [id])
  outcomeId       Int
  qty             Int
  price           Float
}

enum OrderType {
  BUY
  SELL
}

enum OrderStatus {
  OPEN
  PARTIAL
  FILLED
  CANCEL
}

enum LiquidityActionType {
  SPLIT
  MERGE
}

enum UserRole {
  ADMIN
  USER
}
